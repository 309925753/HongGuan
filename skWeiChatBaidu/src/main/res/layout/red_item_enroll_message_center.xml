<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="13dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_message_type"
            android:layout_width="45dp"
            android:layout_height="@dimen/dp45"
            android:src="@mipmap/message_radio"
            android:layout_marginTop="@dimen/dp10"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp5"
        >
        <TextView
            android:id="@+id/tv_mesage_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15_text_size"
            tools:text="娜娜理理报名了你的节目（4月17号中午北
京市），快去看看吧"
            />
        <TextView
            android:id="@+id/tv_message_cotent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="11sp"
            tools:text="1小时前"
            android:layout_below="@+id/tv_mesage_type"
            android:layout_marginTop="@dimen/dp10"
            />
        <TextView
            android:id="@+id/tv_meeage_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="11sp"
            android:text="去看看"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            android:layout_below="@+id/tv_mesage_type"
            android:drawableRight="@mipmap/message_right"
            android:layout_marginTop="@dimen/dp5"
            />
    </RelativeLayout>
</LinearLayout>