<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/normal_bg"    android:orientation="vertical">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="40dp"        android:orientation="horizontal">        <ImageView            android:id="@+id/close_iv"            android:layout_width="40dp"            android:layout_height="match_parent"            android:padding="6dp"            android:src="@drawable/actionbar_finish_b" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:text="@string/sure_pay"            android:textColor="@color/app_black"            android:textSize="@dimen/sp_16_text_size" />    </RelativeLayout>    <View style="@style/View_Line" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="40dp"        android:gravity="center_horizontal">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="ï¿¥"            android:textColor="@color/app_black"            android:textSize="@dimen/sp_18_text_size" />        <TextView            android:id="@+id/money_tv"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="0.01"            android:textColor="@color/app_black"            android:textSize="40sp" />    </LinearLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="12dp"        android:padding="12dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/order_info"            android:textColor="@color/Grey_600"            android:textSize="@dimen/sp_14_text_size" />        <TextView            android:id="@+id/order_info_tv"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:text="@string/order_info"            android:textColor="@color/Grey_600"            android:textSize="@dimen/sp_14_text_size" />    </RelativeLayout>    <View style="@style/View_Line" />    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="12dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/pay_method"            android:textColor="@color/Grey_600"            android:textSize="@dimen/sp_14_text_size" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:text="@string/change_payment"            android:textColor="@color/Grey_600"            android:textSize="@dimen/sp_14_text_size" />    </RelativeLayout>    <View style="@style/View_Line" />    <Button        android:id="@+id/sure_pay_btn"        style="@style/BossGreenBtn"        android:layout_marginTop="160dp"        android:text="@string/sure_pay" /></LinearLayout>