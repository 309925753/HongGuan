<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fillet_dialog_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:padding="2dp"
            android:src="@mipmap/delete_icon_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/get_money_code"
            android:textColor="@color/scan_recharge_title"
            android:textSize="@dimen/sp_20_text_size" />

    </RelativeLayout>

    <View style="@style/View_Line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/code_iv"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            tools:src="@mipmap/qr_code_icon" />

        <TextView
            android:id="@+id/save_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:background="@drawable/scan_recharge_dialog_red"
            android:paddingStart="9dp"
            android:paddingTop="2dp"
            android:paddingEnd="9dp"
            android:paddingBottom="2dp"
            android:text="@string/rp_receipt_tip4"
            android:textColor="@color/scan_recharge_save"
            android:textSize="@dimen/sp_15_text_size" />

        <TextView
            android:id="@+id/tip_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/scan_recharge_wx_alipay_tip1"
            android:textColor="@color/scan_recharge_tip"
            android:textSize="@dimen/sp_15_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="2dp"
            android:paddingRight="12dp"
            android:paddingBottom="9dp"
            android:text="@string/scan_recharge_wx_alipay_tip2"
            android:textColor="@color/scan_recharge_tip"
            android:textSize="@dimen/sp_15_text_size" />

    </LinearLayout>

    <View style="@style/View_Line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/scan_recharge_dialog_white"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/Grey_600"
            android:textSize="@dimen/sp_18_text_size" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="@drawable/scan_recharge_dialog_blue"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18_text_size" />

    </LinearLayout>

</LinearLayout>