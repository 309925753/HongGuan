<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <include layout="@layout/a_view_actionbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <com.sk.weichat.view.CircleImageView
            android:id="@+id/ava1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/avatar_normal" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/ava1"
            android:background="@drawable/chat_from_warp_bg"
            android:gravity="center_vertical"
            android:maxWidth="210dp"
            android:padding="10dp"
            android:text="@string/preview_font_size"
            android:textColor="@color/black"
            android:textSize="@dimen/chat_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp">

        <com.sk.weichat.view.CircleImageView
            android:id="@+id/ava2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/im_notice" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ava2"
            android:background="@drawable/chat_to_warp_bg"
            android:gravity="center_vertical"
            android:maxWidth="210dp"
            android:padding="10dp"
            android:text="@string/hint_change_font_size"
            android:textColor="@color/black"
            android:textSize="@dimen/chat_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/app_white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textColor="@color/app_black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_toRightOf="@id/a1"
                    android:text="@string/standard"
                    android:textColor="@color/Grey_500"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="A"
                    android:textColor="@color/app_black"
                    android:textSize="17sp" />

            </RelativeLayout>

            <com.sk.weichat.view.ControlFontSize
                android:id="@+id/control_font"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                app:circleColor="@color/app_white"
                app:circleRadius="12dp"
                app:lineColor="@color/Grey_500"
                app:lineWidth="0.4dp"
                app:totalCount="5" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>