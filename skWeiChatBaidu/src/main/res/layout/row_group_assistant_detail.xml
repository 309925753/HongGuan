<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/list_selector_background_ripple"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.sk.weichat.view.CircleImageView
            android:id="@+id/group_assistant_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="7dp"
            tools:src="@drawable/ic_notice" />

        <TextView
            android:id="@+id/group_assistant_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:singleLine="true"
            android:text="@string/auto_reply_assistant"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_14_text_size" />

        <ImageView
            android:id="@+id/group_assistant_edit_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="7dp"
            android:padding="7dp"
            android:src="@drawable/ic_collection_set"
            android:visibility="gone"
            tools:visibility="visible" />

        <View style="@style/View_Line_Vertical" />

    </LinearLayout>

    <View style="@style/View_Line" />

</LinearLayout>