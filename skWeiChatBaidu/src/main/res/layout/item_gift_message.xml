<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_round_black40"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="80dp">

            <com.sk.weichat.view.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="2dp"
                android:src="@drawable/default_head"/>

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/avatar"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/example_name"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/me_title_size"/>

                <TextView
                    android:id="@+id/gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/default_gift_comment"
                    android:textColor="@color/chat_background"
                    android:textSize="@dimen/me_title_size"/>

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/gift_type"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/info"
            android:scaleType="fitXY"
            android:src="@drawable/yipitiezhi001"/>

    </FrameLayout>

    <TextView
        android:id="@+id/gift_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="x1"
        android:textColor="@color/chat_background"
        android:textSize="25dp"
        android:textStyle="bold"/>

</LinearLayout>