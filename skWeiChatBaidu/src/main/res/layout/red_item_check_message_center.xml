<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="13dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_message_type"
            android:layout_width="45dp"
            android:layout_height="@dimen/dp45"
            android:src="@mipmap/message_radio"
            android:layout_marginTop="@dimen/dp10"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_now_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp5"
        >
        <TextView
            android:id="@+id/tv_mesage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15_text_size"
            tools:text="昵称"
            />
        <TextView
            android:id="@+id/tv_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_42cfa2_2"
            android:drawablePadding="1dp"
            android:paddingLeft="3dp"
            android:paddingRight="2dp"
            android:layout_toRightOf="@+id/tv_mesage_name"
            android:text="真人"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:textSize="9sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请求查看你的相册"
            android:textColor="#ff333333"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/tv_true"
            android:layout_marginLeft="@dimen/dp5"
            />

        <TextView
            android:id="@+id/tv_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="11sp"
            tools:text="1小时前"
            android:layout_below="@+id/tv_mesage_name"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp5"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcl_phot"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:layout_below="@+id/tv_message_time"
          />

        <TextView
            android:id="@+id/tv_allow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_shape_fb719a_5"
            android:layout_below="@+id/rcl_phot"
            android:text="允许"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12_text_size"
            android:drawablePadding="1dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"

            android:layout_marginTop="@dimen/dp15"
            />
        <TextView
            android:id="@+id/tv_refuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_shape_fff1f5_5"
            android:layout_below="@+id/rcl_phot"
            android:text="拒绝"
            android:textColor="@color/color_FB719A"
            android:textSize="@dimen/sp_12_text_size"
            android:drawablePadding="1dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="@dimen/dp15"
            android:layout_toRightOf="@+id/tv_allow"
            android:layout_marginLeft="@dimen/dp10"
            />

        <TextView
            android:id="@+id/tv_meeage_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="11sp"
            android:text="TA的主页"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            android:layout_below="@+id/tv_mesage_name"
            android:drawableRight="@mipmap/message_right"
            android:layout_marginTop="@dimen/dp5"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp5"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_mesage_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15_text_size"
            tools:text="娜娜理理报名了你的节目（4月17号中午北
京市），快去看看吧"
            />

        <TextView
            android:id="@+id/tv_message_cotent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mesage_type"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_666666"
            android:textSize="11sp"
            tools:text="1小时前" />

        <TextView
            android:id="@+id/tv_meeage_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="11sp"
            android:text="TA的主页"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            android:layout_below="@+id/tv_mesage_type"
            android:drawableRight="@mipmap/message_right"
            android:layout_marginTop="@dimen/dp5"
            />
    </RelativeLayout>
</LinearLayout>