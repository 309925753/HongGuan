<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/selector_girl_list_click"
    android:clickable="true"
    android:paddingLeft="15dp">

    <RelativeLayout
        android:id="@+id/rl_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@mipmap/red_ic_avatar_female"
            app:riv_border_color="@color/white"
            app:riv_border_width="0dp"
            app:riv_corner_radius="6dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            app:riv_tile_mode="clamp" />

        <TextView
            android:id="@+id/tv_photo_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/red_shape_bg_photo_num"
            android:drawableLeft="@mipmap/ic_girl_photo"
            android:drawablePadding="5dp"
            android:gravity="top"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            android:text="15"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>


    <!--    <ImageView-->
    <!--        android:id="@+id/iv_avatar"-->
    <!--        android:layout_width="70dp"-->
    <!--        android:layout_height="70dp"-->
    <!--        android:layout_centerVertical="true"-->
    <!--        android:layout_marginRight="10dp"-->
    <!--        android:scaleType="fitXY"-->
    <!--        android:src="@mipmap/ic_invite_vip" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/rl_avatar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLength="7"
                android:text="昵称"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:background="@drawable/shape_fb719a_2"
                android:drawableLeft="@mipmap/ic_girl"
                android:drawablePadding="1dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="女神"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:background="@drawable/shape_42cfa2_2"
                android:drawableLeft="@mipmap/ic_true_girl"
                android:drawablePadding="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="2dp"
                android:text="真人"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_f4c442_2"
                android:paddingLeft="6dp"
                android:paddingRight="2dp"
                android:text="VIP  "
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/iv_debutante"
                android:layout_width="32dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/gif_debutante" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.5dp"
                    android:src="@mipmap/ic_star" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_label_a"
                android:paddingLeft="5.5dp"
                android:paddingRight="5.5dp"
                android:text="上海市"
                android:textColor="@color/color_FB719A"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@drawable/shape_bg_label_a"
                android:paddingLeft="5.5dp"
                android:paddingRight="6dp"
                android:text="19岁.摩羯座"
                android:textColor="@color/color_FB719A"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@drawable/shape_bg_label_a"
                android:paddingLeft="5.5dp"
                android:paddingRight="5.5dp"
                android:text="设计"
                android:textColor="@color/color_FB719A"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_label_b"
                android:drawableLeft="@mipmap/ic_distance"
                android:drawablePadding="2.5dp"
                android:paddingLeft="5.5dp"
                android:paddingRight="4.5dp"
                android:text="3m"
                android:textColor="@color/color_666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@drawable/shape_bg_label_c"
                android:paddingLeft="5.5dp"
                android:paddingRight="6dp"
                android:text="在线"
                android:textColor="@color/color_C6914B"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@drawable/shape_bg_label_d"
                android:paddingLeft="6dp"
                android:paddingRight="6.5dp"
                android:text="申请浏览"
                android:textColor="@color/color_34BA97"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/rl_avatar"
        android:background="@color/color_DFDFDF" />

</RelativeLayout>