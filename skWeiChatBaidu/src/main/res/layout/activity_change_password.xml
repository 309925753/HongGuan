<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <include layout="@layout/a_view_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp15"
        android:background="@drawable/a_bg_for_transfer_money"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="9dp">

            <TextView
                android:id="@+id/tv_prefix"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/popup_arrow_down_green"
                android:enabled="false"
                android:gravity="center"
                android:text="+86"
                android:textSize="@dimen/sp_14_text_size" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="13.0dip"
                android:layout_marginTop="13.0dip"
                android:background="@color/light_gray_7" />

            <EditText
                android:id="@+id/phone_numer_edit"
                style="@style/EditTextWithLeftIconNew"
                android:enabled="false"
                android:hint="@string/please_input_phone_number"
                android:inputType="phone"
                android:textColor="#DBDBDB"
                android:textSize="@dimen/one_level_title"
                tools:text="020002" />

        </LinearLayout>

        <View
            style="@style/View_Line"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical">

            <com.sk.weichat.view.ClearEditText
                android:id="@+id/old_password_edit"
                style="@style/EditTextWithLeftIcon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/digits_password"
                android:drawableLeft="@mipmap/password_icon"
                android:hint="@string/hint_input_old_password"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textSize="@dimen/one_level_title" />

            <ToggleButton
                android:id="@+id/tbEyeOld"
                style="@style/PasswordEye" />

        </LinearLayout>

        <View
            style="@style/View_Line"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical">

            <com.sk.weichat.view.ClearEditText
                android:id="@+id/password_edit"
                style="@style/EditTextWithLeftIconNew"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/digits_password"
                android:drawableLeft="@mipmap/password_icon"
                android:hint="@string/please_input_new_password"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textSize="@dimen/one_level_title" />

            <ToggleButton
                android:id="@+id/tbEye"
                style="@style/PasswordEye" />

        </LinearLayout>

        <View
            style="@style/View_Line"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical">

            <com.sk.weichat.view.ClearEditText
                android:id="@+id/confirm_password_edit"
                style="@style/EditTextWithLeftIconNew"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/digits_password"
                android:drawableLeft="@mipmap/password_icon"
                android:hint="@string/please_input_new_password"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textSize="@dimen/one_level_title" />

            <ToggleButton
                android:id="@+id/tbEyeConfirm"
                style="@style/PasswordEye" />

        </LinearLayout>

        <View
            style="@style/View_Line"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/login_btn"
            style="@style/BossGreenBtn"
            android:layout_marginBottom="@dimen/dp30"
            android:layout_marginTop="30dp"
            android:text="@string/change_password"
            android:textSize="@dimen/one_level_title" />
    </LinearLayout>

</LinearLayout>