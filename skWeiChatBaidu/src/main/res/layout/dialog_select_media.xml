<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialog_select_video_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/dialog_select_video"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:drawableLeft="@mipmap/meeting_video"
                android:drawablePadding="8dp"
                android:drawableStart="@mipmap/meeting_video"
                android:gravity="center"
                android:text="@string/video_call"
                android:textColor="@color/dialog_normal"/>
        </LinearLayout>

        <View style="@style/View_Line" />

        <LinearLayout
            android:id="@+id/dialog_select_voice_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/dialog_select_voice"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:drawableLeft="@mipmap/tel"
                android:drawablePadding="8dp"
                android:drawableStart="@mipmap/tel"
                android:gravity="center"
                android:text="@string/voice_call"
                android:textColor="@color/dialog_normal"/>

        </LinearLayout>

        <View style="@style/View_Line" />

        <LinearLayout
            android:id="@+id/dialog_select_talk_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/dialog_select_talk"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:drawableLeft="@mipmap/icon_talk"
                android:drawablePadding="8dp"
                android:drawableStart="@mipmap/icon_talk"
                android:gravity="center"
                android:text="@string/name_talk"
                android:textColor="@color/dialog_normal"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_select_cancel"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="@dimen/dialog_bottom_cancel_margin"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/dialog_normal"
        android:textStyle="bold"/>

</LinearLayout>