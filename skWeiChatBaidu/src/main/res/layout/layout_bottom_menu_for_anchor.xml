<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bottom_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:padding="10dp">

    <ImageView
        android:id="@+id/send_message"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="7dp"
        android:src="@mipmap/chat_icon"
        android:visibility="visible" />


    <Button
        android:id="@+id/close_bottom"
        android:layout_width="150dp"
        android:layout_height="@dimen/dp30"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_btn_red_live"
        android:text="@string/end_live"
        android:textColor="@color/white"
        android:textSize="15sp" />

        <ImageView
            android:id="@+id/swCam"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp45"
            android:padding="7dp"
            android:src="@mipmap/camera_icon" />

        <ImageView
            android:id="@+id/skinWhite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:padding="7dp"
            android:src="@mipmap/beauty_icon" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_circle_black30"
            android:padding="7dp"
            android:src="@drawable/icon_share"
            android:visibility="gone" />


