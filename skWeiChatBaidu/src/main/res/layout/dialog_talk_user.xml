<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_talk_user"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="19dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivHead"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:riv_oval="true"
        tools:src="@drawable/default_head" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:text="@string/example_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_last_request_talk_time"
            android:textColor="@color/text_value"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvLastRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_value"
            android:textSize="13sp"
            tools:text="00:00:00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_last_talk_length"
            android:textColor="@color/text_value"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvTalkLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_value"
            android:textSize="13sp"
            tools:text="00:00:00" />

    </LinearLayout>

</LinearLayout>