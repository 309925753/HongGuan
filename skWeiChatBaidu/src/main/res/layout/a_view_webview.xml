<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/fl_parent"
             android:layout_width="fill_parent"
             android:layout_height="50.0dip"
             android:background="@color/main_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:paddingBottom="9dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="9dp"
            android:src="@drawable/actionbar_finish"
            android:visibility="visible"/>

        <View
            android:id="@+id/web_title_line"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/title_iv_back"
            android:background="@color/app_white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@id/web_title_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_tv_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="4.5"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/app_white"
                android:textSize="@dimen/BigTextSize"/>

            <TextView
                android:id="@+id/move_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="@string/send_to_friend"
                android:textColor="@color/white"
                android:textSize="@dimen/BigTextSize"
                android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>