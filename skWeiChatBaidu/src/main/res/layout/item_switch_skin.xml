<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_selector_relativelayout_item"
        android:paddingTop="2dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/skin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:background="@drawable/skin_use_normal"
            android:gravity="center_vertical|left"
            android:paddingLeft="7dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="7dp"
            android:text="@string/example_title"
            android:textColor="@color/app_white"
            android:textSize="@dimen/one_level_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/skin_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/skin_name"
            android:src="@mipmap/tab_chat" />

        <View
            style="@style/View_Line"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:id="@+id/check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:src="@drawable/ic_selected" />

        <TextView
            android:id="@+id/use_skin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/skin_use_normal"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="7dp"
            android:text="@string/apply_now"
            android:textColor="@color/app_white"
            android:textSize="@dimen/SmallerTextSize"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>