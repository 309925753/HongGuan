<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_cost_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12_text_size"
        tools:text="充值" />

    <TextView
        android:id="@+id/tv_exchange_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cost_type"
        android:layout_marginTop="7dp"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_12_text_size"
        tools:text="交易时间:2020-03-26 23:59:59" />

    <TextView
        android:id="@+id/tv_red_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp15"
        android:layout_toLeftOf="@+id/tv_bean"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15_text_size"
        tools:text="-299红豆" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_red_num"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp15"
        android:textColor="@color/color_EA3740"
        android:textSize="10sp"
        android:visibility="gone"
        tools:text="审核中"
        tools:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_exchange_time"
        android:layout_marginTop="@dimen/dp15"
        android:background="@color/color_DFDFDF" />

</RelativeLayout>