<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp10"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/tv_basic_employee"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/add_partment_icon"
        android:drawablePadding="10dp"
        android:gravity="start"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:text="@string/employee_detail"
        android:textColor="@color/black"
        android:textSize="@dimen/pop_window" />

    <TextView
        android:id="@+id/tv_change_department"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/write_icon"
        android:drawablePadding="10dp"
        android:gravity="start"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:text="@string/change_departement"
        android:textColor="@color/black"
        android:textSize="@dimen/pop_window" />

    <TextView
        android:id="@+id/tv_modify_position"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/write_icon"
        android:drawablePadding="10dp"
        android:gravity="start"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:text="@string/modify_job"
        android:textColor="@color/black"
        android:textSize="@dimen/pop_window" />

    <TextView
        android:id="@+id/tv_delete_employee"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/delete_icon"
        android:drawablePadding="10dp"
        android:gravity="start"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:text="@string/del_employee"
        android:textColor="@color/black"
        android:textSize="@dimen/pop_window" />

</LinearLayout>
