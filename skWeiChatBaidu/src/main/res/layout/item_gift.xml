<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/grid_fragment_home_item_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/yipitiezhi001"/>

    <TextView
        android:id="@+id/grid_fragment_home_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawablePadding="2dp"
        android:drawableRight="@drawable/icon_dimen"
        android:gravity="center"
        android:padding="10dp"
        android:text="1"
        android:textColor="@color/chat_background"
        android:textSize="@dimen/gift_size"/>

</LinearLayout>