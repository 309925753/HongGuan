<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:paddingBottom="@dimen/chat_item_padding_bottom"    android:paddingLeft="@dimen/chat_item_padding_left"    android:paddingRight="@dimen/chat_item_padding_right"    android:paddingTop="@dimen/chat_item_padding_top">    <TextView        android:id="@+id/time_tv"        style="@style/ChattingUISystem"        android:visibility="gone" />    <com.sk.weichat.view.HeadView        android:id="@+id/chat_head_iv"        android:layout_width="@dimen/chat_head_size"        android:layout_height="@dimen/chat_head_size"        android:layout_alignParentRight="true"        android:layout_below="@id/time_tv"        android:layout_marginEnd="@dimen/chat_head_right"        android:layout_marginStart="@dimen/chat_head_left"        android:layout_marginTop="@dimen/chat_head_top"        android:contentDescription="@string/app_name"        android:src="@drawable/avatar_normal" />    <TextView        android:id="@+id/nick_name"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@id/time_tv"        android:layout_marginTop="@dimen/chat_head_top"        android:layout_toLeftOf="@id/chat_head_iv"        android:text="123123123"        android:textSize="@dimen/SmallerTextSize"        android:visibility="gone" />    <RelativeLayout        android:id="@+id/chat_warp_view"        android:layout_width="wrap_content"        android:layout_height="38dp"        android:layout_below="@id/nick_name"        android:layout_marginTop="@dimen/chat_head_top"        android:layout_toLeftOf="@id/chat_head_iv"        android:background="@drawable/chat_from_warp_bg"        android:visibility="visible">        <LinearLayout            android:id="@+id/ll_audio"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="@dimen/dp5"            android:gravity="center"            android:orientation="horizontal">            <View                android:id="@+id/view_audio"                android:layout_width="0.5dp"                android:layout_height="50dp"                android:background="@color/audio_view" />            <com.sk.weichat.audio_zx.AudioView                android:id="@id/av_chat"                android:layout_width="70dp"                android:layout_height="wrap_content"                android:layout_alignStart="@+id/view_audio"                android:layout_centerVertical="true" />        </LinearLayout>        <TextView            android:id="@+id/tv_duration"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginLeft="4dp"            android:layout_marginRight="4dp"            android:layout_toRightOf="@+id/ll_audio"            android:maxLines="1"            android:text=""            android:textColor="@color/audio_view"            android:textSize="11sp" />    </RelativeLayout>    <include layout="@layout/view_holder_state_from" />    <CheckBox        android:id="@+id/chat_msc"        style="@style/CustomCheckBoxTheme"        android:layout_marginTop="@dimen/dp10"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignTop="@id/chat_warp_view"        android:clickable="false"        android:visibility="visible" /></RelativeLayout>