<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="90dp"
    android:layout_height="130dp"
    android:layout_marginLeft="15dp"
    android:background="@drawable/red_shape_bg_item_vip_center">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="会员"
        android:textColor="@color/color_333333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/red_shape_bg_tv_recommend"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="推荐"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="半个月"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/line"
        android:layout_width="25dp"
        android:layout_height="2dp"
        android:layout_below="@+id/tv_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/black_trans_33" />

    <TextView
        android:id="@+id/tv_price_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="186元/月"
        android:textColor="@color/color_333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_price_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_price_discount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="236元/月"
        android:textColor="@color/color_333333"
        android:textSize="11sp"
        android:visibility="invisible" />

</RelativeLayout>