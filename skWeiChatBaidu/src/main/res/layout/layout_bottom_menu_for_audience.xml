<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bottom_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="40dp"
    android:paddingEnd="14dp"
    android:paddingStart="14dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/send_message"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_live_send_message"
        android:padding="10dp"
        android:src="@drawable/icon_send_message"
        android:text="@string/label_live_send_message"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/message"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_circle_black30"
            android:padding="7dp"
            android:src="@drawable/icon_message"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/gift"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_live_gift" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_circle_black30"
            android:padding="7dp"
            android:src="@drawable/icon_share"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>