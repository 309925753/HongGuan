<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="20dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivActionImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/list_selector_background_ripple"
        android:padding="11dp"
        tools:src="@drawable/ic_wb_copy" />

    <TextView
        android:id="@+id/tvActionName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        android:textColor="@color/Grey_700"
        android:textSize="10sp"
        tools:ignore="SmallSp,SpUsage"
        tools:text="@string/send_to_friend" />

</LinearLayout>
