<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="13dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_meeage_type"
            android:layout_width="45dp"
            android:layout_height="@dimen/dp45"
            android:src="@mipmap/message_radio"
            android:layout_marginTop="@dimen/dp10"
            />
            <TextView
                android:layout_toRightOf="@id/iv_meeage_type"
                android:id="@+id/tv_like_times"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                tools:text=" 12"
                android:background="@drawable/red_my_circle_dot"
                android:textColor="@color/white"
                android:textSize="9sp"
                />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp5"
        >
        <TextView
            android:id="@+id/tv_mesage_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15_text_size"
            tools:text="电台消息"
            />
        <TextView
            android:id="@+id/tv_message_cotent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12_text_size"
            tools:text="红小豆在上海市发布了一条广播，点击查看"
            android:layout_below="@+id/tv_mesage_type"
            android:layout_marginTop="@dimen/dp10"
            android:lines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_meeage_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:textSize="11sp"
            tools:text="10分钟前"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_F5F5F5"
            android:layout_below="@+id/tv_message_cotent"
            android:layout_marginTop="@dimen/dp5"
            />
    </RelativeLayout>
</LinearLayout>