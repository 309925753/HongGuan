<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/red_ic_avatar_female"
        app:riv_corner_radius="5dp"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/tv_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/red_shape_bg_self"
        android:paddingLeft="4dp"
        android:paddingTop="1dp"
        android:paddingRight="3dp"
        android:paddingBottom="1dp"
        android:text="本人"
        android:textColor="@color/color_FEFEFE"
        android:textSize="11sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/red_shape_bg_photo_status"
        android:gravity="center"
        android:text="无法查看"
        android:textColor="@color/white"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/tv_rest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/red_shape_bg_rest_photo"
        android:gravity="center"
        android:text="+5"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>