<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_for_shatup"
    android:paddingBottom="@dimen/dp5"
    android:paddingTop="@dimen/dp5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/list_selector_background_ripple_radius"
        android:padding="9dp"
        android:text="@string/privacy_allow_none"
        android:textColor="@color/black"
        android:textSize="@dimen/one_level_title" />

    <View
        style="@style/View_Line"
        android:layout_marginLeft="@dimen/dp60"
        android:layout_marginRight="@dimen/dp60" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:padding="9dp"
        android:text="@string/privacy_allow_all"
        android:textColor="@color/black"
        android:textSize="@dimen/one_level_title" />

    <View
        style="@style/View_Line"
        android:layout_marginLeft="@dimen/dp60"
        android:layout_marginRight="@dimen/dp60" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:padding="9dp"
        android:text="@string/privacy_allow_friend"
        android:textColor="@color/black"
        android:textSize="@dimen/one_level_title" />

    <View
        style="@style/View_Line"
        android:layout_marginLeft="@dimen/dp60"
        android:layout_marginRight="@dimen/dp60" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:padding="9dp"
        android:text="@string/privacy_allow_contact"
        android:textColor="@color/black"
        android:textSize="@dimen/one_level_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvAllow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/list_selector_background_ripple"
            android:gravity="center"
            android:padding="9dp"
            android:text="@string/privacy_whitelist"
            android:textColor="@color/black"
            android:textSize="@dimen/one_level_title" />

        <TextView
            android:id="@+id/tvBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/list_selector_background_ripple"
            android:gravity="center"
            android:padding="9dp"
            android:text="@string/privacy_blacklist"
            android:textColor="@color/black"
            android:textSize="@dimen/one_level_title" />

    </LinearLayout>

</LinearLayout>