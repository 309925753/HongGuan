<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_add"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/fillet_dialog_bg"
    android:padding="15dp">

    <TextView
        android:id="@+id/add_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/scan_recharge_confirm"
        android:textSize="@dimen/sp_16_text_size"
        android:visibility="gone"
        tools:text="@string/select_withdraw_add_alipay_account" />

    <ImageView
        android:id="@+id/type_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        tools:src="@mipmap/ic_band_small" />

    <TextView
        android:id="@+id/type_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/type_iv"
        android:singleLine="true"
        android:src="@mipmap/ic_band_small"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_16_text_size"
        tools:text="中国银行（6659）" />

    <ImageView
        android:id="@+id/next_iv"
        style="@style/basic_info"
        android:contentDescription="@string/app_name" />

</RelativeLayout>
