<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_marginBottom="4dp"    android:background="@color/white"    android:orientation="vertical"    android:padding="18dp">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center_vertical"        android:orientation="horizontal">        <com.sk.weichat.view.CircleImageView            android:id="@+id/avatar_iv"            android:layout_width="20dp"            android:layout_height="20dp"            tools:src="@drawable/avatar_normal" />        <TextView            android:id="@+id/name_tv"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="9dp"            android:textSize="@dimen/sp_15_text_size"            tools:text="伏风" />        <TextView            android:id="@+id/date_tv"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginLeft="9dp"            android:layout_weight="1"            android:gravity="right"            android:textColor="@color/Grey_400"            android:textSize="@dimen/sp_13_text_size"            tools:text="12天前" />    </LinearLayout>    <LinearLayout        android:id="@+id/abstract_ll"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="12dp">        <ImageView            android:id="@+id/abstract_left_iv"            android:layout_width="40dp"            android:layout_height="40dp"            android:scaleType="centerCrop"            tools:src="@drawable/welcome_bg" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="9dp"            android:orientation="vertical">            <TextView                android:id="@+id/abstract_top_tv"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:ellipsize="end"                android:maxLines="2"                android:textColor="@color/app_black"                android:textSize="@dimen/sp_17_text_size"                tools:text="1111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111" />            <TextView                android:id="@+id/abstract_bottom_tv"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:ellipsize="end"                android:maxLines="1"                android:textColor="@color/Grey_400"                android:textSize="@dimen/sp_14_text_size"                tools:text="111111111111111111111111111111111111111111111111111111111111111111111111111111111111" />        </LinearLayout>    </LinearLayout></LinearLayout>