<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/face_backgroud"
    android:baselineAligned="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/im_photo_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/im_tool_photo_button_bg"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/chat_poto"
            android:textColor="@color/black_trans_99"
            android:textSize="@dimen/chat_tool_size" />

        <TextView
            android:id="@+id/im_camera_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/im_tool_camera_button_bg"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/chat_camera"
            android:textColor="@color/black_trans_99"
            android:textSize="@dimen/chat_tool_size" />

        <TextView
            android:id="@+id/im_video_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/im_tool_local_button_bg"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/video"
            android:textColor="@color/black_trans_99"
            android:textSize="@dimen/chat_tool_size" />

        <TextView
            android:id="@+id/im_audio_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/im_tool_audio_button_bg"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/chat_audio"
            android:textColor="@color/black_trans_99"
            android:textSize="@dimen/chat_tool_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/im_redpacket_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/im_tool_redpacket_button_bg"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/chat_redpacket"
            android:textColor="@color/black_trans_99"
            android:textSize="@dimen/chat_tool_size" />

        <TextView
            android:id="@+id/im_loc_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/im_tool_loc_button_bg"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/chat_loc"
            android:textColor="@color/black_trans_99"
            android:textSize="@dimen/chat_tool_size" />

        <TextView
            android:id="@+id/im_card_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/im_tool_card_button_bg"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/chat_card"
            android:textColor="@color/black_trans_99"
            android:textSize="@dimen/chat_tool_size" />

        <TextView
            android:id="@+id/im_file_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/im_tool_file_button_bg"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/chat_file"
            android:textColor="@color/black_trans_99"
            android:textSize="@dimen/chat_tool_size" />

    </LinearLayout>

</LinearLayout>