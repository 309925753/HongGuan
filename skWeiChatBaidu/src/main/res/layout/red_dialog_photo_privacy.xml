<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/shape_white_12"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="相册隐私"
            android:textColor="@color/color_333333"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_DFDFDF" />

        <TextView
            android:id="@+id/tv_open"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_girl_list_click"
            android:gravity="center"
            android:text="公开(推荐)"
            android:textColor="@drawable/selector_resident_city_click"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_DFDFDF" />

        <TextView
            android:id="@+id/tv_lock"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_girl_list_click"
            android:gravity="center"
            android:text="相册解锁查看"
            android:textColor="@drawable/selector_resident_city_click"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_DFDFDF" />

        <TextView
            android:id="@+id/tv_verify"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_girl_list_click"
            android:gravity="center"
            android:text="查看前需通过我的验证"
            android:textColor="@drawable/selector_resident_city_click"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_DFDFDF" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>