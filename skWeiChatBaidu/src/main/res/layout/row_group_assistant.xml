<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/list_selector_background_ripple"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <com.sk.weichat.view.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/avatar_normal" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="9dp"
        android:paddingTop="5dp"
        android:paddingRight="9dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/auto_reply_assistant"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_14_text_size" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/auto_reply_assistant_desc"
            android:textColor="@color/Grey_600"
            android:textSize="@dimen/sp_12_text_size" />

    </LinearLayout>

    <Button
        android:id="@+id/add"
        style="@style/OKBtn_Small"
        android:text="@string/add_to"
        android:visibility="gone" />

</LinearLayout>